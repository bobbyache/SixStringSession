<UserControl x:Class="CygSoft.SmartSession.Desktop.PracticeRoutines.PracticeRoutineTree.TimeSlotExerciseTreeViewItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CygSoft.SmartSession.Desktop.PracticeRoutines.PracticeRoutineTree"
             mc:Ignorable="d" 
             d:DesignHeight="55" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Slider  Grid.Column="0" Margin="5" MaxWidth="100" Maximum="5" HorizontalAlignment="Stretch" TickFrequency="1" 
							Value="{Binding FrequencyWeighting, ValidatesOnNotifyDataErrors=True}"
							TickPlacement="BottomRight" IsSnapToTickEnabled="True">

        </Slider>
        <TextBlock Grid.Column="1" TextAlignment="Left" Margin="2" MinWidth="50" Text="{Binding Title}" />
    </Grid>
</UserControl>
