<Window x:Class="CygSoft.SmartSession.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CygSoft.SmartSession.Desktop"
        xmlns:exercises="clr-namespace:CygSoft.SmartSession.Desktop.Exercises"
        xmlns:goals="clr-namespace:CygSoft.SmartSession.Desktop.Goals"
        xmlns:goalTasks="clr-namespace:CygSoft.SmartSession.Desktop.GoalTasks"
        xmlns:attach="clr-namespace:CygSoft.SmartSession.Desktop.Attachments"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <Binding Source="{StaticResource ViewModelLocator}" Path="MainWindowViewModel" />
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type exercises:ExerciseCompositeViewModel}">
            <exercises:ExerciseCompositeView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type attach:FileAttachmentCompositeViewModel}">
            <attach:FileAttachmentCompositeView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type goals:GoalCompositeViewModel}">
            <goals:GoalCompositeView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type goalTasks:GoalTaskCompositeViewModel}">
            <goalTasks:GoalTaskCompositeView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" x:Name="NavigationBar">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Exercises" Command="{Binding NavigationCommand}" CommandParameter="ExerciseSearch" />
            <Button Grid.Column="1" Content="Files" Command="{Binding NavigationCommand}" CommandParameter="FileAttachmentSearch" />
            <Button Grid.Column="2" Content="Goals" Command="{Binding NavigationCommand}" CommandParameter="GoalSearch" />
            <Button Grid.Column="3" Content="Goal Tasks" Command="{Binding NavigationCommand}" CommandParameter="GoalTaskSearch" />
        </Grid>
        <ContentControl Grid.Row="1"  Content="{Binding CurrentViewModel}" />
    </Grid>
    

</Window>
